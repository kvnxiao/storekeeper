{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Storekeeper",
  "identifier": "com.storekeeper.desktop",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": {
      "script": "pnpm run dev",
      "cwd": "../frontend"
    },
    "beforeBuildCommand": {
      "script": "pnpm run build",
      "cwd": "../frontend"
    },
    "devUrl": "http://localhost:3000",
    "frontendDist": "../frontend/.output/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Storekeeper",
        "width": 420,
        "height": 700,
        "resizable": true,
        "visible": false,
        "center": true,
        "decorations": true,
        "scrollBarStyle": "fluentOverlay"
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "./icons/icon.png",
      "iconAsTemplate": false,
      "tooltip": "Storekeeper",
      "title": "Storekeeper"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {}
}
